# Test Environment Variables
# Copy this file to .env.test and modify as needed

# Database
TEST_MONGODB_URI=mongodb://localhost:27017/vttless-test
TEST_MONGO_SESSION_SECRET=your-test-session-secret-here

# JWT Configuration for Testing
TEST_JWT_SECRET_KEY=your-test-jwt-secret-key-here-change-in-production
TEST_JWT_REFRESH_SECRET_KEY=your-test-jwt-refresh-secret-key-here-change-in-production
TEST_JWT_ISSUER=vttless-test
TEST_JWT_AUDIENCE=vttless-app-test
TEST_JWT_EXPIRATION_MS=86400000
TEST_JWT_REFRESH_EXPIRATION_MS=604800000

# Security Configuration
TEST_NODE_ENV=test
TEST_COOKIE_DOMAIN=localhost

# Server Configuration
TEST_PORT=5000
TEST_EVENTSERVER_PORT=3001
TEST_CLIENT_URL=http://localhost:3000

# OAuth Providers (for testing)
TEST_GOOGLE_CLIENT_ID=your-test-google-client-id
TEST_GOOGLE_CLIENT_SECRET=your-test-google-client-secret

# AWS S3 Configuration (for testing)
TEST_AWS_ACCESS_KEY_ID=your-test-access-key-id
TEST_AWS_SECRET_ACCESS_KEY=your-test-secret-access-key
TEST_AWS_REGION=us-east-1
TEST_S3_BUCKET_NAME=your-test-bucket-nameTEST_JWT_SECRET_KEY=test-jwt-secret-key-for-testing
TEST_JWT_REFRESH_SECRET_KEY=test-jwt-refresh-secret-key-for-testing
TEST_NODE_ENV=test
