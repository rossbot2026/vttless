# Database
MONGODB_URI=mongodb://localhost:27017/vttless
MONGO_SESSION_SECRET=your-session-secret-here

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_REFRESH_SECRET_KEY=your-jwt-refresh-secret-key-here-change-in-production
JWT_ISSUER=vttless
JWT_AUDIENCE=vttless-app
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# Security Configuration
NODE_ENV=development
COOKIE_DOMAIN=localhost

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Server Configuration
PORT=5000
EVENTSERVER_PORT=3001
CLIENT_URL=http://localhost:3000

# Production/Staging URLs
BACKEND_URL=https://vttless-backend-production.up.railway.app
EVENTSERVER_URL=https://vttless-eventserver-production.up.railway.app
CLIENT_URL=https://vttless-client-production.up.railway.app

# OpenRouter (AI Battle Map Generation)
OPENROUTER_API_KEY=your_openrouter_api_key_here